<!DOCTYPE html>
<html lang="en">
<%- include("partials/head") %>

    <body>
        <main>
            <header>
                <% if (article) { %>
                    <h1>Edit Article</h1>
                    <% } else {%>
                        <h1>New Article</h1>
                        <% }%>
                <a href="/">Back</a>
            </header>
            <form action="/new/article" method="post">

                <% if (article) { %>
                    <input type="text" name="_id" id="_id" value="<%= article._id%>" hidden> 
                    <label for="title">Title :</label>
                    <input type="text" name="title" id="title" value="<%= article.title %>"> 
                    <label for="article">Article:</label>
                    <textarea type="text" name="article" id="article" maxlength="100" rows="4"><%= article.article %></textarea>
                    <button type="submit">Post</button>
                    <% } else {%>
                        <label for="title">Title :</label>
                        <input type="text" name="title" id="title">
                        <label for="article">Article:</label>
                        <textarea type="text" name="article" id="article" maxlength="100" rows="4"></textarea>
                        <button type="submit">Add Article</button>
                        <% }%>
            </form>
        </main>

    </body>

</html>